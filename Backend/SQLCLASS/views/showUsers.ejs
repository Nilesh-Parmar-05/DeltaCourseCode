<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <style>
      table,
      tr,
      th,
      td {
        border: 1px solid black;
      }
    </style>
  </head>
  <body>
    <table>
      <tr>
        <th>Sr. No.</th>
        <th>Id</th>
        <th>Email</th>
        <th>Username</th>
      </tr>
      <% let count = 1 %> <%for(user of users){%>
      <tr>
        <td><%= count ++ %></td>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td>
          <form method="GET" action="/user/<%=user.id%>/edit">
            <button>Edit username</button>
          </form>
        </td>

        <td>
          <form method="GET" action="/user/<%= user.id %>/delete">
            <button>Delete User</button>
          </form>
        </td>
      </tr>
      <%}%>
    </table>
  </body>
</html>
